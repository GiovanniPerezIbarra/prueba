@model IEnumerable<Entidades.Productos>

@{
    ViewBag.Title = "IndexProductos";
}

<h2>Lista de productos</h2>
@{
    if (Model.Count() == 0)
    {
    <p>
    @Html.ActionLink("Agregar producto", "Create", new { id = @ViewContext.RouteData.Values["id"] })
    </p>
    }
    else
    {
        foreach (var item in Model)
        {
    <p>
        @Html.ActionLink("Agregar producto", "Create", new { id = item.IdProveedor })
    </p>
            break;
        }

    }
}
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.unidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costo)
            </td>
        </tr>


    }
</table>

<div>
    @Html.ActionLink("Regresar al inicio", "../Proveedor/IndexProveedor")
</div>